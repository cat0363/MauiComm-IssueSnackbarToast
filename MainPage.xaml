<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiComm_IssueSnackbarToast.MainPage">

    <Grid RowDefinitions="44,44,44,*" RowSpacing="5">
        <Entry Grid.Row="0" x:Name="txtMessage" Text="" />
        <Button Grid.Row="1" x:Name="btnSnackbar" Text="Show Snackbar" TextColor="White" BackgroundColor="Blue" Clicked="btnSnackbar_Clicked" />
        <Button Grid.Row="2" x:Name="btnToast" Text="Show Toast" TextColor="White" BackgroundColor="Blue" Clicked="btnToast_Clicked" />
    </Grid>

</ContentPage>
